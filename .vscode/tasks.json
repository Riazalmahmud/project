{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Run TypeScript",
        "type": "shell",
        "command": "ts-node",
        "args": [
          "${file}"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": [
          "$tsc"
        ],
        "presentation": {
          "reveal": "always",
          "panel": "shared"
        },
        "runOptions": {
          "runOn": "folderOpen"
        }
      },
      {
        "type": "typescript",
        "tsconfig": "tsconfig.json",
        "problemMatcher": [
          "$tsc"
        ],
        "group": "build",
        "label": "tsc: build - tsconfig.json"
      }
    ]
  }